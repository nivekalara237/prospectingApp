<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProspectionActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="Prospection"
        android:padding="16dp"
        android:background="@color/colorAppLight"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="@color/colorApp1"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="Prospection"
        android:padding="6dp"
        android:background="#26e11c6e"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:id="@+id/error"
        android:textStyle="italic"
        android:layout_below="@+id/title"
        android:textSize="11sp"
        android:visibility="gone"
        android:textColor="#ea0c3c"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/error"
        android:paddingTop="16dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nom et prenom" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/telephone_l"
                android:layout_below="@+id/name_l"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="Téléphone" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_l"
                android:layout_below="@+id/telephone_l"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textWebEmailAddress"
                    android:hint="Adresse Email" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/localisation_l"
                android:layout_width="match_parent"
                android:layout_below="@+id/email_l"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Localisation (Quartier)" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/impression_l"
                android:layout_below="@+id/localisation_l"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/impression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:gravity="start"
                    android:maxLines="8"
                    android:hint="Impression du prospect" />
            </android.support.design.widget.TextInputLayout>


            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_below="@+id/impression_l"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio_prospect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Prospection" />

                <RadioButton
                    android:id="@+id/radio_suivi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Suivi" />
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:text="Enregistrer"
                android:layout_below="@+id/radiogroup"
                android:layout_marginTop="20dp"
                android:background="@color/colorApp1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFF"
                android:id="@+id/save"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>