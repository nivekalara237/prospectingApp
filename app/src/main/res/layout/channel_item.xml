<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="2dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:paddingRight="10dp"
    android:layout_height="@dimen/chaneel_item_heigth">
    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_group_forum_128dp" />
    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/futura_light_bt"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/image"
        android:paddingRight="3dp"
        android:layout_toLeftOf="@+id/datelastmessage"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:id="@+id/name"
        android:singleLine="true"
        android:paddingLeft="1dp"
        android:textColor="@color/flatui_midnight_blue"
        android:text="Niveka Dev team : Commerciaux"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/futura_light_bt"
        android:textAllCaps="false"
        android:id="@+id/lastmessage"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/image"
        android:paddingRight="5dp"
        android:layout_below="@+id/name"
        android:paddingBottom="1dp"
        android:singleLine="true"
        android:paddingTop="6dp"
        android:paddingLeft="1dp"
        android:layout_toLeftOf="@+id/nb_message"
        android:textColor="@color/flatui_asbestos"
        android:text="je vous ai dit de revenier en entreprise non? depechez vous svp... la reunion commence dans qulque instants "
        android:textSize="10.5sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/datelastmessage"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/futura_light_bt"
        android:textSize="10sp"
        android:text="23 FÃ©v."
        android:paddingTop="1dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/nb_message"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/futura_light_bt"
        android:textSize="10sp"
        android:text="19"
        android:layout_marginTop="6dp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_channel_item_nb_message"
        android:layout_below="@+id/datelastmessage"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#8da7a7a7"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/chaneel_item_heigth"
        android:layout_height="0.5dp"/>

</RelativeLayout>