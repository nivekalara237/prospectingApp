<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leftLayout"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/letf_image_message_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/letf_message_name"
            android:text="John Doe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/lightyellow"
            android:fontFamily="@font/futura_medium_bt"
            android:layout_toRightOf="@+id/letf_image_message_profile"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/contentLeftLayout"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/letf_message_name"
            android:layout_toRightOf="@+id/letf_image_message_profile"
            android:layout_height="wrap_content">

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/letf_message_body"
                android:text="hi man, how are you? dddsds  sd s d s s d s d s d s d  s d"
                android:background="@drawable/rounded_rectangle_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:padding="8dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/futura_medium_bt"
                android:layout_marginLeft="8dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/imageLeftLayout"
                android:padding="5dp"
                android:maxWidth="240dp"
                android:visibility="gone"
                android:background="@drawable/bg_message_right_image"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/left_attachement"
                    android:src="@drawable/ic_list_128dp"
                    android:scaleType="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/left_progress_value"
                    android:text="123/200Ko"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/futura_medium_bt"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="6dp"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:layout_width="24dp"
                    android:id="@+id/left_file_progress_bar"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:progressTint="@android:color/white"
                    android:progressBackgroundTint="@android:color/white"
                    android:layout_height="24dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:weightSum="3"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_file_download"
                    android:id="@+id/leftErrorLayout"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingRight="@dimen/dimen_16"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_file_download_24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="23Ko"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/futura_medium_bt"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/letf_message_time"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textStyle="italic"
            android:layout_marginLeft="38dp"
            android:textColor="@color/lightyellow"
            android:fontFamily="@font/futura_medium_bt"
            android:layout_below="@+id/contentLeftLayout" />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="60dp"
        android:layout_below="@+id/leftLayout"
        android:id="@+id/rightLayout"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/contentRightLayout"
            android:layout_height="wrap_content">
            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rigth_message_body"
                android:background="@drawable/rounded_rectangle_message_right"
                android:textColor="@color/lightorangedark"
                android:padding="8dp"
                android:elevation="2dp"
                android:textSize="12sp"
                android:visibility="visible"
                android:maxWidth="240dp"
                android:layout_alignParentRight="true"
                android:text="Placeholder message :( :D"
                android:fontFamily="@font/futura_medium_bt"
                android:layout_alignParentEnd="true"
                emojicon:emojiconSize="45sp"
                emojicon:emojiconUseSystemDefault="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/imageRightLayout"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:visibility="gone"
                android:background="@drawable/bg_message_right_image"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/right_attachement"
                    android:src="@drawable/ic_list_128dp"
                    android:scaleType="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/right_progress_value"
                    android:text="123/200Ko"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/futura_medium_bt"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="6dp"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:layout_width="24dp"
                    android:id="@+id/right_file_progress_bar"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:progressTint="@android:color/white"
                    android:progressBackgroundTint="@android:color/white"
                    android:layout_height="24dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:weightSum="3"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_file_download"
                    android:id="@+id/rightErrorLayout"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:foreground="?android:selectableItemBackground"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingRight="@dimen/dimen_16"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_file_download_24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="23Ko"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/futura_medium_bt"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/right_message_time"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_toLeftOf="@+id/right_message_seen"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/contentRightLayout"
            android:textColor="@color/lightyellow"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/futura_medium_bt"/>
        <ImageView
            android:id="@+id/right_message_seen"
            android:text="11:40"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_double_check_24dp"
            android:tint="@color/lightyellow"
            android:layout_below="@+id/contentRightLayout"/>

    </RelativeLayout>

</RelativeLayout>