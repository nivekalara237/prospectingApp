<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@drawable/background">
    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/lightyellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WARMA"
            android:id="@+id/warma_id"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="60sp"
            android:textStyle="bold"/>
        <TextView
            android:textColor="@color/lightorangedark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prospecting"
            android:layout_below="@id/warma_id"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="-9dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/spaceullustration">

        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_marginRight="16dp"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle2"
            android:text="@string/text0027" />

        <Button
            android:id="@+id/signin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:layout_weight="3.5"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle"
            android:text="@string/text0028" />
    </LinearLayout>


</LinearLayout>