<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="24dp"
    app:cardBackgroundColor="@color/lightorangedark"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/contentPanel"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/nom_client"
            android:padding="1dp"
            android:text="Niveka lara"
            android:textColor="@color/colorSimpleText"
            android:textSize="10.5sp"
            android:fontFamily="@font/futura_medium_bt"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/telephone_client"
            android:padding="1dp"
            android:text="(+237696031671)"
            android:layout_toRightOf="@+id/nom_client"
            android:textColor="@color/colorSimpleText"
            android:textSize="10sp"
            android:fontFamily="@font/futura_medium_bt"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/email_client"
            android:padding="1dp"
            android:text="kevinlactiokemta@gmail.com"
            android:layout_below="@+id/nom_client"
            android:textColor="@color/colorSimpleText"
            android:textSize="10sp"
            android:fontFamily="@font/futura_medium_bt"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/localisation_client"
            android:padding="1dp"
            android:text="YaoundÃ© bieym Assi"
            android:layout_below="@+id/email_client"
            android:textStyle="italic"
            android:fontFamily="@font/futura_medium_bt"
            android:textColor="@color/colorSimpleText"
            android:textSize="10sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/date"
            android:padding="3dp"
            android:text="12/12/2018"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:textStyle="italic"
            android:fontFamily="@font/futura_medium_bt"
            android:textColor="@color/colorSimpleText"
            android:textSize="10sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/type"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="[ suivi ]"
            android:background="@color/lightyellow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:textStyle="normal"
            android:layout_below="@+id/date"
            android:fontFamily="@font/futura_medium_bt"
            android:textColor="@color/colorWrite"
            android:textSize="10sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/impression"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:text="This document covers the basics of retrieving database data, how data is ordered, and how to perform simple queries on data. Data retrieval in the Admin SDK is implemented slightly differently across different programming languages."
            android:layout_below="@+id/localisation_client"
            android:layout_marginRight="6dp"
            android:textStyle="italic"
            style="@style/TextLabel2"
            android:textColor="@color/colorSimpleText"
            android:textSize="12sp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/user"
            android:padding="3dp"
            android:text="Kemta kevin"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/impression"
            android:layout_marginRight="6dp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/futura_medium_bt"
            android:textColor="@color/colorSimpleText"
            android:textSize="10sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>