<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context=".activities.ListingProspectsActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/prospects_enregistr_s"
        android:padding="16dp"
        android:background="@color/colorAppLight"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="@color/colorApp1"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="error"
        android:padding="6dp"
        android:background="#26e11c6e"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:id="@+id/error"
        android:textStyle="italic"
        android:layout_below="@+id/title"
        android:textSize="11sp"
        android:visibility="gone"
        android:textColor="#ea0c3c"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:progressTint="@color/colorApp2"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerView"
        android:layout_below="@+id/error"
        android:padding="16dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>