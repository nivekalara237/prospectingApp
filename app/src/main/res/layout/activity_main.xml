<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application de prospection"
        android:textColor="@color/colorApp1"
        android:textSize="20sp"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="200dp"
        android:id="@+id/icon"
        android:layout_centerInParent="true"
        android:tint="@color/colorApp1"
        android:src="@drawable/web_hi_res_512"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="15dp"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:text="Nouveau prospect"
                android:textAllCaps="false"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:textSize="11sp"
                android:onClick="addProspect"
                android:background="@color/colorApp2"
                android:textColor="#fff"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="15dp"
            app:cardCornerRadius="4dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:text="Voir les prospects"
                android:textAllCaps="false"
                android:paddingRight="40dp"
                android:textSize="11sp"
                android:paddingLeft="40dp"
                android:onClick="listProspects"
                android:background="@color/colorApp2"
                android:textColor="#fff"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>



</RelativeLayout>