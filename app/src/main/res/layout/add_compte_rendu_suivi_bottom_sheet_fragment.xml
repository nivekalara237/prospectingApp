<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_16"
    android:layout_height="match_parent">

 <LinearLayout
     android:layout_width="match_parent"
     android:weightSum="10"
     android:orientation="vertical"
     android:layout_height="match_parent">
     <TextView
         android:layout_width="match_parent"
         android:layout_weight="1"
         android:text="Add new meeting"
         android:gravity="center"
         android:textStyle="bold"
         android:textSize="14sp"
         android:fontFamily="@font/futura_medium_bt"
         android:textColor="@color/flatui_peter_river"
         android:layout_height="0dp" />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_weight="1"
         android:weightSum="10"
         android:orientation="horizontal"
         android:layout_height="0dp">
         <android.support.design.widget.TextInputLayout
             android:id="@+id/date_l"
             android:layout_width="0dp"
             android:layout_weight="4"
             style="@style/TextAppearance.App.TextInputLayout"
             android:theme="@style/TextLabel2"
             android:background="@color/flatui_light_2"
             android:textColorHint="@color/colorApp3"
             android:layout_height="wrap_content">
             <EditText
                 android:id="@+id/date"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:clickable="true"
                 android:focusable="true"
                 android:editable="false"
                 android:textColorHint="@color/colorApp3"
                 android:fontFamily="@font/futura_medium_bt"
                 android:inputType="date"
                 android:hint="Date" />
         </android.support.design.widget.TextInputLayout>
         <ImageButton
             android:layout_width="0dp"
             android:src="@drawable/ic_clock_24dp"
             android:tint="@color/flatui_peter_river"
             android:layout_weight="1"
             android:id="@+id/pickdate"
             android:layout_marginRight="@dimen/dimen_16"
             android:layout_gravity="center_vertical"
             android:background="@android:color/transparent"
             android:layout_height="wrap_content" />
         <android.support.design.widget.TextInputLayout
             android:id="@+id/time_l"
             android:layout_width="0dp"
             android:layout_weight="4"
             android:layout_marginLeft="@dimen/dimen_16"
             style="@style/TextAppearance.App.TextInputLayout"
             android:theme="@style/TextLabel2"
             android:background="@color/flatui_light_2"
             android:textColorHint="@color/colorApp3"
             android:layout_height="wrap_content">
             <EditText
                 android:id="@+id/time"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:clickable="true"
                 android:focusable="true"
                 android:editable="false"
                 android:textColorHint="@color/colorApp3"
                 android:fontFamily="@font/futura_medium_bt"
                 android:inputType="time"
                 android:hint="Time" />
         </android.support.design.widget.TextInputLayout>
         <ImageButton
             android:layout_width="0dp"
             android:src="@drawable/ic_clock_24dp"
             android:tint="@color/flatui_peter_river"
             android:layout_weight="1"
             android:id="@+id/picktime"
             android:layout_gravity="center_vertical"
             android:background="@android:color/transparent"
             android:layout_height="wrap_content" />
     </LinearLayout>



     <android.support.design.widget.TextInputLayout
         android:id="@+id/content_l"
         android:layout_width="match_parent"
         style="@style/TextAppearance.App.TextInputLayout"
         android:theme="@style/TextLabel2"
         android:textColorHint="@color/colorApp3"
         android:layout_weight="5"
         android:layout_height="0dp">
         <EditText
             android:id="@+id/content"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:inputType="textMultiLine"
             android:lines="8"
             android:textColorHint="@color/colorApp3"
             android:gravity="start"
             android:maxLines="10"
             android:padding="4dp"
             android:background="@color/flatui_light_2"
             android:fontFamily="@font/futura_medium_bt"
             android:textSize="12sp"
             android:hint="@string/text0029" />
     </android.support.design.widget.TextInputLayout>
     <android.support.v7.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_weight="2.2"
         android:id="@+id/recyclerViewPhoto"
         android:orientation="horizontal"
         android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_height="0dp">
        <Button
            android:layout_width="wrap_content"
            android:text="Enregistrer"
            android:textAllCaps="false"
            android:id="@+id/save"
            android:textColor="@color/colorWrite"
            android:background="@drawable/buttonstyle4"
            android:fontFamily="@font/futura_medium_bt"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="wrap_content"
            android:text="Enregistrer"
            android:id="@+id/pickcamera"
            android:textColor="@color/colorWrite"
            android:background="@drawable/buttonstyle5"
            android:fontFamily="@font/futura_medium_bt"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/save"
            android:tint="@android:color/white"
            android:layout_marginRight="@dimen/dimen_16"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_height="wrap_content" />
    </RelativeLayout>

 </LinearLayout>


</RelativeLayout>